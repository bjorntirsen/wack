<%- include ('./partials/sidebar') %>
<%- include ('./partials/messages') %>
  <section class="container main__container row">
    <h1>Welcome <%= user.name %></h1>
    <h2>This is your profile page</h2>
    <p>Name: <%= user.name %></p>
    <p>UserId: <%= user._id %></p>
    <form
      method="POST"
      enctype="multipart/form-data"
      action="/profile/uploadPhoto"
    >
      <input type="file" name="profile_pic" /><br />
      <input type="submit" value="Save" />
    </form>
    <% if (user.profilePhoto) { %>
      <img class="medium_image" src="<%= user.profilePhoto %>" alt="<%= user.name %>">
    <% } %> 
  </section>
<!-- ----------JAVASCRIPT---------- -->
<script src="../socket.io/socket.io.js"></script>
<script src="../public/scripts/script.js"></script>
<script src="../public/scripts/channel.js"></script>
