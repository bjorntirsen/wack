<div class="sidebar">
  <div class="sidebar__channels">
    <h3 class="">Channels</h3>
    <ul id="channels">
      <% channels.forEach(channel => { %>
        <li class="channel__li">
          <a href="../channels/<%= channel.id %>">#<%= channel.name %></a>
        </li>
      <% }) %>
      <li class="channel__li">
        <a href="/channels/create">Create channel</a>
      </li>
    </ul>
  </div>
  <div class="sidebar__users">
    <h3 class="col__header">Direct messages</h3>
    <h2 class="col__header">Click on your name to see profile</h2>
    <ul id="usersUl">
      <% if (users.length > 0) { %>
        <% users.forEach(user => { %>
          <li id="<%= user._id %>">
            <a href="<%=cssdir%>channels/startDM/<%= user._id %>" class="user__li"><%= user.name %></a>
          </li>
        <% }) %>
      <% } %>
    </ul>
  </div>
<%- include ('./partials/messages') %>
  <section class="container main__container row">
    <h1>Welcome <%= user.name %></h1>
    <h2>This is your profile page</h2>
    <p>Name: <%= user.name %></p>
    <p>UserId: <%= user._id %></p>
    <form
      method="POST"
      enctype="multipart/form-data"
      action="/profile/uploadPhoto"
    >
      <input type="file" name="profile_pic" /><br />
      <input type="submit" value="Save" />
    </form>
    <% if (user.profilePhoto) { %>
      <img src="<%= user.profilePhoto %>" alt="<%= user.name %>">
    <% } %> 
  </section>
<!-- ----------JAVASCRIPT---------- -->
<script src="../socket.io/socket.io.js"></script>
<script src="../public/scripts/script.js"></script>
<script src="../public/scripts/channel.js"></script>
